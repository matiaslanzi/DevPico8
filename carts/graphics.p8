function create_enemy()
	e={}
	e.x=20
	e.y=20
	e.dx=0
	e.dy=0
end

function update_enemy()
	e.dx *= friction

	e.x+=p.dx
	e.y+=p.dy
end

function draw_enemy()
	spr(5,e.x,e.y)
	spr(21,e.x + 16,e.y)
	spr(37,e.x + 32,e.y)
	spr(53,e.x + 64,e.y)
end
