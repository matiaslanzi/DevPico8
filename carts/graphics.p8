--player
function create_player()
	p={}

	p.x=64
	p.y=110
	p.dx=0
	p.dy=0
	p.acc=.9
end

function update_player()
	p.dx *= friction

	p.x+=p.dx
	p.y+=p.dy
end

function draw_player()
	spr(1,p.x,p.y,2,2)
end


