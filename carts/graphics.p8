--main
function _init()
	gravity = 0.3
	friction = 0.8

	create_bg()
	create_player()
	create_enemy()
end

function _update()
 if(btn(⬅️)) p.dx-=p.acc
	if(btn(➡️)) p.dx+=p.acc
	-- if(btnp(⬆️)) y-=1
	-- if(btnp(⬇️)) y+=1

	update_stars()
	update_player()
end

function _draw()
 cls()
	draw_bg()
	draw_player()
	draw_enemy()
end
